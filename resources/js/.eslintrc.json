{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jquery": true
    },
    "extends": ["eslint:recommended", "plugin:vue/recommended"],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "key-spacing": [
            2,
            {
                "align": "value",
                "afterColon": true
            }
        ],
        "no-multi-spaces": [
            2,
            { "exceptions": { "AssignmentExpression": true } }
        ],
        "no-multiple-empty-lines": [2, { "max": 2 }]
    }
}
